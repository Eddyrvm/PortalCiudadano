@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <style>
            .dropdown-toggle::after {
                color: white !important; /* Cambia la flecha a blanco */
            }
        </style>
        <ul class="navbar-nav navbar-right">
            @if (Session["UsuarioLogin"] != null) // Asegurarse de que el usuario esté logueado
            {

                <li class="nav-item dropdown" style="color:white">
                    <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@Url.Content(Session["Foto"] != null ? Session["Foto"].ToString() : "~/Content/Imagenes/no-user.png")"
                             style="width:39px; height:39px; border-radius: 50%; object-fit: cover; margin-right: 10px; border: 2px solid white;" />
                        <strong style="color:white">@Session["UsuarioLogin"].ToString()</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow">
                        <li><a class="dropdown-item" href="@Url.Action("DetailsUser", "Users")">Ver Perfil</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "Manage")">Cambiar contraseña</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffc107" class="bi bi-lock-fill" viewBox="0 0 16 16" style="margin-bottom: 4px;">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
                                </svg> Cerrar Sesión!
                            </a>
                        </li>
                    </ul>
                </li>
            }

        </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        @*  <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class="nav-link" })</li>*@
        <li>
            <button type="button" class="btn btn-outline-warning" id="loginButton" onclick="location.href='@Url.Action("Login", "Account")'">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16" style="margin-bottom: 4px;">
                    <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m0 5.996V14H3s-1 0-1-1 1-4 6-4q.845.002 1.544.107a4.5 4.5 0 0 0-.803.918A11 11 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664zM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1" />
                </svg> Iniciar!
            </button>

        </li>
    </ul>
}
