<!-- ACCESIBILIDAD: abrir con Enter/Espacio cuando el h4 tiene foco -->
<script>
    (function () {
        var trigger = document.getElementById('gettingStartedTitle');
        if (!trigger) return;

        trigger.addEventListener('keydown', function (e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                var modalEl = document.getElementById('patenteModal');
                if (modalEl) {
                    var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
                    modal.show();
                }
            }
        });
    })();
</script>