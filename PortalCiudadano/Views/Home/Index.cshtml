                                    </svg>
                                    <h6 class="mb-0">Persona Natural</h6>
                                </div>
                                <p class="text-muted mb-3">Liquidación para contribuyentes con cédula/RUC de persona natural.</p>
                                <div class="mt-auto">
                                    <!-- Ajusta la ruta según tus controladores/acciones -->
                                    <a href="@Url.Action("Create","PersonaNatural")" class="btn btn-primary w-100">
                                        Continuar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CARD: Persona Jurídica -->
