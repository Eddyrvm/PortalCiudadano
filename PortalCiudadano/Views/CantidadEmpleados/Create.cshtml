@model PortalCiudadano.Models.LiquidacionPatente.CantidadEmpleado
@{
    ViewBag.Title = "Crear Cantidad de Empleados";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="container my-4">
        <div class="card shadow-sm">
            <div class="card-header bg-warning-subtle d-flex align-items-center gap-2">
                <i class="bi bi-people fs-5 text-warning"></i>
                <h5 class="mb-0">Nueva Cantidad de Empleados</h5>
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.NumeroEmpleados, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-people-fill"></i></span>
                                @Html.TextBoxFor(
                                    m => m.NumeroEmpleados,
                                    new { @class = "form-control", placeholder = "0" }
                                )
                            </div>
                            @Html.ValidationMessageFor(m => m.NumeroEmpleados, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver al listado
                </a>
                <div class="d-flex gap-2">
                    <button type="reset" class="btn btn-outline-warning">
                        <i class="bi bi-eraser me-1"></i> Limpiar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save2 me-1"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}