@model IEnumerable<PortalCiudadano.Models.LiquidacionPatente.PersonaJuridica>

@{
    ViewBag.Title = "Personas Jurídicas";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning-subtle d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-buildings text-warning me-2"></i>
                Personas Jurídicas
            </h5>
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Nueva
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PersonaJuridicaRazonSocial)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PersonaJuridicaRUC)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PersonaJuridicaNombres)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PersonaJuridicaApellidos)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DireccionContribuyente)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TelefonoContribuyente)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().FaxContribuyente)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().CasillaContribuyente)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().ObligadoContabilidad)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().InicioActividad)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().CapitalPropio)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().FechaCreacion)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.PersonaJuridicaRazonSocial</td>
                                <td>@item.PersonaJuridicaRUC</td>
                                <td>@item.PersonaJuridicaNombres</td>
                                <td>@item.PersonaJuridicaApellidos</td>
                                <td class="text-truncate" style="max-width: 240px;">@item.DireccionContribuyente</td>
                                <td>@item.TelefonoContribuyente</td>
                                <td>@item.FaxContribuyente</td>
                                <td>@item.CasillaContribuyente</td>
                                <td>
                                    @if (item.ObligadoContabilidad)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i> No</span>
                                    }
                                </td>
                                <td>@item.InicioActividad.ToString("dd/MM/yyyy")</td>
                                <td>$ @item.CapitalPropio.ToString("N2")</td>
                                <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.PersonaJuridicalId })" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.PersonaJuridicalId })" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>