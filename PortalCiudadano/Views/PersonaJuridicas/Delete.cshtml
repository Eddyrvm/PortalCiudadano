@model PortalCiudadano.Models.LiquidacionPatente.PersonaJuridica
@{
    ViewBag.Title = "Eliminar Persona Jurídica";
}

<div class="container my-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger-subtle d-flex align-items-center gap-2">
            <i class="bi bi-exclamation-triangle-fill text-danger"></i>
            <h5 class="mb-0">Confirmar eliminación</h5>
        </div>

        <div class="card-body">
            <div class="alert alert-warning d-flex align-items-start gap-2" role="alert">
                <i class="bi bi-exclamation-octagon-fill fs-5"></i>
                <div>
                    <strong>¿Estás seguro de eliminar este registro?</strong><br />
                    Esta acción es <u>irreversible</u> y no podrá deshacerse.
                </div>
            </div>

            <!-- Resumen clave -->
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-6">
                    <div class="p-3 rounded border bg-light">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-buildings"></i>
                            <span class="fw-semibold">Empresa</span>
                        </div>

                        <div class="small text-muted">Razón social</div>
                        <div class="fw-semibold">@Model.PersonaJuridicaRazonSocial</div>

                        <div class="small text-muted mt-2">RUC</div>
                        <div class="fw-semibold">@Model.PersonaJuridicaRUC</div>

                        <div class="small text-muted mt-2">Representante</div>
                        <div class="fw-semibold">@Model.PersonaJuridicaApellidos @Model.PersonaJuridicaNombres</div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="p-3 rounded border bg-light h-100">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-info-square"></i>
                            <span class="fw-semibold">Detalle</span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <span class="small text-muted">Obligado a contabilidad</span>
                            <span>
                                @if (Model.ObligadoContabilidad)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i> Sí
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i> No
                                    </span>
                                }
                            </span>
                        </div>

                        <div class="d-flex justify-content-between mt-2">
                            <span class="small text-muted">Inicio de actividad</span>
                            <span class="fw-semibold">@Model.InicioActividad.ToString("dd/MM/yyyy")</span>
                        </div>

                        <div class="d-flex justify-content-between mt-2">
                            <span class="small text-muted">Capital propio</span>
                            <span class="fw-semibold">$ @Model.CapitalPropio.ToString("N2")</span>
                        </div>

                        <div class="d-flex justify-content-between mt-2">
                            <span class="small text-muted">Fecha de creación</span>
                            <span class="fw-semibold">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detalle adicional -->
            <dl class="row mb-0">
                <dt class="col-sm-4">Dirección</dt>
                <dd class="col-sm-8">@Model.DireccionContribuyente</dd>

                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@Model.TelefonoContribuyente</dd>

                <dt class="col-sm-4">Fax</dt>
                <dd class="col-sm-8">@Model.FaxContribuyente</dd>

                <dt class="col-sm-4">Casilla</dt>
                <dd class="col-sm-8">@Model.CasillaContribuyente</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
            </a>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @* Ajusta si tu clave primaria se llama distinto *@
                @Html.HiddenFor(m => m.PersonaJuridicalId)

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Eliminar definitivamente
                </button>
            }
        </div>
    </div>
</div>