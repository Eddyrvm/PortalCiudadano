@model PortalCiudadano.Models.LiquidacionPatente.Actividad
@{
    ViewBag.Title = "Crear Actividad";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="container my-4">
        <div class="card shadow-sm">
            <div class="card-header bg-warning-subtle d-flex align-items-center gap-2">
                <i class="bi bi-list-task fs-5 text-warning"></i>
                <h5 class="mb-0">Nueva Actividad</h5>
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row g-3">
                    <div class="col-12">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.NombreActividad, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-check2-square"></i></span>
                                @Html.TextBoxFor(m => m.NombreActividad, new { @class = "form-control", placeholder = "Ej. Venta de ropa" })
                            </div>
                            @Html.ValidationMessageFor(m => m.NombreActividad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver al listado
                </a>
                <div class="d-flex gap-2">
                    <button type="reset" class="btn btn-outline-warning">
                        <i class="bi bi-eraser me-1"></i> Limpiar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save2 me-1"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}