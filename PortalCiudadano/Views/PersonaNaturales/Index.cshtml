@model IEnumerable<PortalCiudadano.Models.LiquidacionPatente.PersonaNatural>

@{
    ViewBag.Title = "Personas Naturales";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning-subtle d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-people-fill text-warning me-2"></i>
                Personas Naturales
            </h5>
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Nueva
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PersonaNaturalCedula)</th>
                            <th>@Html.DisplayNameFor(model => model.PersonaNaturalRUC)</th>
                            <th>@Html.DisplayNameFor(model => model.PersonaNaturalNombres)</th>
                            <th>@Html.DisplayNameFor(model => model.PersonaNaturalApellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.DireccionContribuyente)</th>
                            <th>@Html.DisplayNameFor(model => model.TelefonoContribuyente)</th>
                            <th>@Html.DisplayNameFor(model => model.ObligadoContabilidad)</th>
                            <th>@Html.DisplayNameFor(model => model.InicioActividad)</th>
                            <th>@Html.DisplayNameFor(model => model.CapitalPropio)</th>
                            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PersonaNaturalCedula</td>
                                <td>@item.PersonaNaturalRUC</td>
                                <td>@item.PersonaNaturalNombres</td>
                                <td>@item.PersonaNaturalApellidos</td>
                                <td>@item.DireccionContribuyente</td>
                                <td>@item.TelefonoContribuyente</td>
                                <td>
                                    @if (item.ObligadoContabilidad)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i> No</span>
                                    }
                                </td>
                                <td>@item.InicioActividad.ToString("dd/MM/yyyy")</td>
                                <td>$ @item.CapitalPropio.ToString("N2")</td>
                                <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id=item.PersonaNaturalId })" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id=item.PersonaNaturalId })" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>