@model PortalCiudadano.Models.LiquidacionPatente.LiquidarPatentePJ

@{
    ViewBag.Title = "Editar Liquidación (PJ)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LiquidarPatentePJId)

    <!-- Mantener Contador sin edición -->
    @Html.HiddenFor(m => m.Contador)

    <div class="container my-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary-subtle d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h5 class="mb-0 d-flex align-items-center">
                    <i class="bi bi-file-earmark-text text-primary me-2"></i>
                    Editar Liquidación - Persona Jurídica
                </h5>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </a>
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <!-- META compacto: Número (Contador) -->
                <div class="d-flex flex-wrap align-items-center gap-4 small text-secondary mb-3">
                    <span class="d-inline-flex align-items-center">
                        <i class="bi bi-hash me-1"></i>
                        <span class="me-1 fw-semibold">Número:</span>
                        <span class="badge bg-dark">@Model.Contador</span>
                    </span>
                </div>

                @{
                    var tiposSolicitud = new List<SelectListItem>
                            {
                        new SelectListItem { Value = "1", Text = "Primera vez", Selected = (Model?.TipoSolicitud == 1) },
                        new SelectListItem { Value = "2", Text = "Renovación",  Selected = (Model?.TipoSolicitud == 2) }
                    };
                }

                <div class="row g-4">
                    <!-- Columna izquierda -->
                    <div class="col-12 col-lg-6">

                        <!-- Tipo de solicitud -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TipoSolicitud, new { @class = "form-label fw-semibold" })
                            @Html.DropDownListFor(m => m.TipoSolicitud, tiposSolicitud, htmlAttributes: new { @class = "form-select" })
                        </div>

                        <!-- Número de patente asignada (solo números) -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.NumPatenteAsignada, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                                @Html.TextBoxFor(m => m.NumPatenteAsignada, new
                                {
                                    @class = "form-control",
                                    placeholder = "Ej. 000123",
                                    pattern = "[0-9]+",
                                    inputmode = "numeric",
                                    title = "Solo números"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.NumPatenteAsignada, "", new { @class = "text-danger" })
                        </div>

                        <!-- Clasificación -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ClasificacionId, "Clasificación", new { @class = "form-label fw-semibold" })
                            <!-- Clasificación -->
                            @Html.DropDownListFor(m => m.ClasificacionId,
                                (IEnumerable<SelectListItem>)ViewBag.ClasificacionId,
                                htmlAttributes: new { @class = "form-select" })
                        </div>
                    </div>

                    <!-- Columna derecha -->
                    <div class="col-12 col-lg-6">

                        <!-- Persona Jurídica -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.PersonaJuridicalId, "Persona jurídica", new { @class = "form-label fw-semibold" })
                            <!-- Persona Jurídica -->
                            @Html.DropDownListFor(m => m.PersonaJuridicalId,
                                (IEnumerable<SelectListItem>)ViewBag.PersonaJuridicalId,
                                htmlAttributes: new { @class = "form-select" })

                        </div>

                        <!-- Actividad -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ActividadId, "Actividad", new { @class = "form-label fw-semibold" })
                            <!-- Actividad -->
                            @Html.DropDownListFor(m => m.ActividadId,
                                (IEnumerable<SelectListItem>)ViewBag.ActividadId,
                                htmlAttributes: new { @class = "form-select" })
                        </div>

                        <!-- Info. estadística -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.InfoEstadisticaProducId, "Info. estadística", new { @class = "form-label fw-semibold" })
                            <!-- Info. estadística -->
                            @Html.DropDownListFor(m => m.InfoEstadisticaProducId,
                                (IEnumerable<SelectListItem>)ViewBag.InfoEstadisticaProducId,
                                htmlAttributes: new { @class = "form-select" })
                        </div>

                        <!-- Cantidad de Empleados -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.CantidadEmpleadoId, "Cantidad de empleados", new { @class = "form-label fw-semibold" })
                            <!-- Cantidad de empleados -->
                            @Html.DropDownListFor(m => m.CantidadEmpleadoId,
                                (IEnumerable<SelectListItem>)ViewBag.CantidadEmpleadoId,
                                htmlAttributes: new { @class = "form-select" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
                <div class="d-flex gap-2">
                    <button type="reset" class="btn btn-outline-warning">
                        <i class="bi bi-eraser me-1"></i> Limpiar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save2 me-1"></i> Guardar cambios
                    </button>
                </div>
            </div>
        </div>
    </div>
}