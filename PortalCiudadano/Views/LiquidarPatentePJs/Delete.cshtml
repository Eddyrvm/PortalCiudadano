@model PortalCiudadano.Models.LiquidacionPatente.LiquidarPatentePJ

@{
    ViewBag.Title = "Eliminar Liquidación (PJ)";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var tipo = Model.TipoSolicitud == 1 ? "Primera vez"
             : Model.TipoSolicitud == 2 ? "Renovación"
             : "N/D";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger-subtle d-flex align-items-center justify-content-between flex-wrap gap-2">
            <h5 class="mb-0 d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                Eliminar Liquidación - Persona Jurídica
            </h5>
        </div>

        <div class="card-body">
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                <div>¿Seguro que deseas eliminar este registro? Esta acción no se puede deshacer.</div>
            </div>

            <!-- Meta compacto -->
            <div class="d-flex flex-wrap align-items-center gap-4 small text-secondary mb-3">
                <span class="d-inline-flex align-items-center">
                    <i class="bi bi-hash me-1"></i>
                    <span class="me-1 fw-semibold">Número:</span>
                    <span class="badge bg-dark">@Model.Contador</span>
                </span>
                <span class="d-inline-flex align-items-center">
                    <i class="bi bi-tag me-1"></i>
                    <span class="me-1 fw-semibold">Tipo de solicitud:</span>
                    @if (Model.TipoSolicitud == 1)
                    {<span class="badge bg-success">Primera vez</span> }
                    else if (Model.TipoSolicitud == 2)
                    { <span class="badge bg-info text-dark">Renovación</span> }
                    else
                    { <span class="badge bg-secondary">N/D</span>}
                </span>
            </div>

            <!-- Datos -->
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 bg-light">
                        <div class="fw-semibold text-muted mb-1">Actividad</div>
                        <div class="fs-6">@Model.Actividad.NombreActividad</div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 bg-light">
                        <div class="fw-semibold text-muted mb-1">Cantidad de empleados</div>
                        <div class="fs-6">@Model.CantidadEmpleado.NumeroEmpleados</div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 bg-light">
                        <div class="fw-semibold text-muted mb-1">Clasificación</div>
                        <div class="fs-6">@Model.Clasificacion.NombreClasificacion</div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 bg-light">
                        <div class="fw-semibold text-muted mb-1">Info. estadística</div>
                        <div class="fs-6">@Model.InfoEstadisticaProduc.IndoEstadisticaProducName</div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 bg-light">
                        <div class="fw-semibold text-muted mb-1">Persona jurídica</div>
                        <div class="fs-6">@Model.PersonaJuridicas.PersonaJuridicaRazonSocial</div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 bg-light">
                        <div class="fw-semibold text-muted mb-1">Nro. Patente asignada</div>
                        <div class="fs-6 fw-semibold">@Model.NumPatenteAsignada</div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "card-footer d-flex justify-content-between align-items-center" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.LiquidarPatentePJId) <!-- ajusta el nombre si tu PK es distinta -->

            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3 me-1"></i> Eliminar
            </button>
        }
    </div>
</div>