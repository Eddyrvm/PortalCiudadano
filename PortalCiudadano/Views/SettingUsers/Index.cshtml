@model IEnumerable<PortalCiudadano.ViewModels.UserView>
@{
    ViewBag.Title = "Index";
}

<h2>Administrador de Permisos</h2>
<br />

<div class="panel panel-primary table-responsive active">
    <table class="table table-hover table-responsive table-striped " id="My Table">
        <tr class="alert-info info">
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMail)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>

                <td>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-warning btn-sm" title="Asignar Rol" href="@Url.Action("Roles", "SettingUsers", new { userId = item.UserId })">
                            <span class="glyphicon glyphicon-circle-arrow-up"></span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-node-plus-fill" viewBox="0 0 16 16">
                                <path d="M11 13a5 5 0 1 0-4.975-5.5H4A1.5 1.5 0 0 0 2.5 6h-1A1.5 1.5 0 0 0 0 7.5v1A1.5 1.5 0 0 0 1.5 10h1A1.5 1.5 0 0 0 4 8.5h2.025A5 5 0 0 0 11 13m.5-7.5v2h2a.5.5 0 0 1 0 1h-2v2a.5.5 0 0 1-1 0v-2h-2a.5.5 0 0 1 0-1h2v-2a.5.5 0 0 1 1 0" />
                            </svg> Asignar Rol
                        </a>
                    }

                </td>
            </tr>
        }

    </table>
</div>



